// Add markers for start and end points
start = new OpenLayers.LonLat(<%= data.first.lon %>, <%= data.first.lat %>).
            transform( fromProjection, toProjection);
end = new OpenLayers.LonLat(<%= data.last.lon %>, <%= data.last.lat %>).
          transform( fromProjection, toProjection);

var markers = new OpenLayers.Layer.Markers( "Markers" );

var offset = new OpenLayers.Pixel(-(35/2), -64);

var startIcon = new OpenLayers.Icon("<%= root_url + "images/start-flag.png" %>", new OpenLayers.Size(35,64), offset);
var arrivalIcon = new OpenLayers.Icon("<%= root_url + "images/arrival-flag.png" %>", new OpenLayers.Size(35,64), offset);

markers.addMarker(new OpenLayers.Marker(start, startIcon));
markers.addMarker(new OpenLayers.Marker(end, arrivalIcon));

map.addLayer(markers);

